<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context=".MainActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/TResultado"
            android:layout_width="15dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/BotaoSete"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/alert_light_frame"
            android:text="7"
            android:textSize="18sp" />

        <Button
            android:id="@+id/BotaoOito"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/alert_light_frame"
            android:text="8"
            android:textSize="18sp" />

        <Button
            android:id="@+id/BotaoNove"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/alert_light_frame"
            android:text="9"
            android:textSize="18sp" />

        <Button
            android:id="@+id/BotaoMais"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/alert_dark_frame"
            android:text="+"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/BotaoQuatro"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/alert_light_frame"
            android:text="4"
            android:textSize="18sp" />

        <Button
            android:id="@+id/BotaoCinco"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/alert_light_frame"
            android:text="5"
            android:textSize="18sp" />

        <Button
            android:id="@+id/BotaoSeis"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/alert_light_frame"
            android:text="6"
            android:textSize="18sp" />

        <Button
            android:id="@+id/BotaoMenos"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/alert_dark_frame"
            android:text="-"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/BotaoUm"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/alert_light_frame"
            android:text="1"
            android:textSize="18sp" />

        <Button
            android:id="@+id/BotaoDois"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/alert_light_frame"
            android:text="2"
            android:textSize="18sp" />

        <Button
            android:id="@+id/BotaoTres"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/alert_light_frame"
            android:text="3"
            android:textSize="18sp" />

        <Button
            android:id="@+id/BotaoVezes"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/alert_dark_frame"
            android:text="*"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/BotaoZero"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/alert_light_frame"
            android:text="0"
            android:textSize="18sp" />

        <Button
            android:id="@+id/BotaoLimpar"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/alert_dark_frame"
            android:text="C"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <Button
            android:id="@+id/BotaoIgual"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/alert_dark_frame"
            android:text="="
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <Button
            android:id="@+id/BotaoDividir"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/alert_dark_frame"
            android:text="/"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />
    </TableRow>

</TableLayout>